<?xml version='1.0' encoding='utf-8'?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.developer">

    <!-- 读取您共享存储空间中的内容 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- 修改或删除您共享存储空间中的内容 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 拥有完全的网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 允许应用检测网络连接状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 允许应用以只读的方式访问手机设备的信息 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!-- 获取设备的MAC地址 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 获取当前应用是否在显示应用 -->
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <!-- 请求安装文件包 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>
    <uses-permission android:name="android.permission.REPLACE_EXISTING_PACKAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:resizeableActivity="false">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.application.developer.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".FilesActivity"
            android:label="项目"/>

        <activity
            android:name=".SettingActivity"
            android:label="设置"/>

        <activity
            android:name=".FeedActivity"
            android:label="意见反馈"/>
        
        <activity
            android:name=".AlreadyActivity"
            android:label="导入项目"/>

        <activity
            android:name=".DatailsActivity"
            android:label="项目详情"/>

        <activity
            android:name=".activity.EditCodeActivity"
            android:label="编辑代码"
            android:theme="@style/CodeTheme"/>
        
        <activity
            android:name=".ImageActivity"
            android:label="图片查看器"/>

        <activity
            android:name=".WebActivity"
            android:label="WebView"/>

    </application>

</manifest>
